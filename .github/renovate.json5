{
    extends: [
        "config:base",
        ":semanticCommitTypeAll(chore)"
    ],
    labels: ["a:chore", "in:dependencies"],
    enabledManagers: [
        "github-actions",
        "gradle",
        "gradle-wrapper",
        "npm"
    ],
    commitMessageExtra: "{ {{~#if isPinDigest}}{{{currentDigestShort}}}{{else}}{{#if currentValue}}{{{currentValue}}}{{else}}{{{currentDigestShort}}}{{/if}}{{/if}} => {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if~}} }",
    dependencyDashboard: false,
    packageRules: [
        {
            description: "Update GitHub Actions dependencies",
            matchManagers: ["github-actions"],
            addLabels: ["in:build"]
        },
        {
            description: "Update Gradle wrapper",
            matchManagers: ["gradle-wrapper"],
            addLabels: ["in:build"]
        },
        {
            description: "Update build dependencies in build.versions.toml",
            matchFileNames: ["gradle/build.versions.toml"],
            addLabels: ["in:build"]
        },
        {
            description: "Update library dependencies in libs.versions.toml",
            matchFileNames: ["gradle/libs.versions.toml"]
        },
        {
            description: "Update NPM build dependencies",
            matchDepTypes: ["devDependencies", "engines", "packageManager"],
            addLabels: ["in:build"]
        }
    ],
    prHourlyLimit: 0,
    prConcurrentLimit: 0
}